<% @title = 'History' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Search", new_query_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag queries_path, method: :get, remote: true, id: "queries_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="queries"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
