<div class="page-header">
  <h1><%= link_to @source.name, @source %> &middot; <%= link_to 'Rules', source_rules_path(@source) %> &middot; <%= @title %></h1>
</div>

<%= form_for [@rule.source, @rule], html: { class: 'form-horizontal' } do |f| %>
  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @rule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :actions, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <table class="blank" style="width:100%"><col width="33%"/><col width="33%"/><col width="33%"/>
        <tr>
          <% Rule::ACTION_GROUPS.each_with_index do |(rule_group, rules), index| %>
            <td style="vertical-align:top">
              <%= check_box_tag rule_group, '1', false, onclick: "toggleCheckboxGroup(#{index});", class: "rule_group_#{index}_parent" %> <b><%= rule_group %></b><br />
              <% rules.each do |rule| %>
                &nbsp;&nbsp;<%= check_box_tag "rules[#{rule.gsub(' ', '_')}]", '1', @rule.has_action?(rule), onclick: "toggleCheckboxGroupParent(#{index});", class: "rule_group_#{index}" %> <%= rule %><br />
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :users, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :user_tokens, data: { pre: (@rule.users || []).collect{|id| User.find_by_id(id)}.compact.collect{|u| { name: u.name_and_email, id: u.id }}.to_json } %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :blocked, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.check_box :blocked %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
