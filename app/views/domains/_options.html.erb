<table class="table table-striped table-bordered table-hover table-condensed" style="table-layout:fixed;"><col width="40%"/><col width="40%"/><col width="20%"/>
  <thead>
    <tr>
      <th style="text-align:left">Display Name</th>
      <th style="text-align:left">Value</th>
      <th>Missing Code</th>
    </tr>
  </thead>
  <% domain.options.each do |option| %>
    <% option = option.symbolize_keys %>
    <tr>
      <td><%= option[:display_name] %></td>
      <td><%= option[:value] %></td>
      <td style="text-align:center"><%= simple_check(option[:missing_code] == '1') %></td>
    </tr>
  <% end %>
</table>
