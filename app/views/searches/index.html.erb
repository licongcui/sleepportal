<% @title = 'Searches' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Search", new_search_path, class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag searches_path, method: :get, remote: true, id: "searches_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="searches"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
