<% @title = "My Settings" %>
<div class="page-header">
  <h1>Email Notifications</h1>
</div>

<%= form_tag update_settings_user_path(current_user), method: :post, id: 'email_settings', class: 'form-horizontal' do %>
  <div class="control-group">
    <div class="controls checkbox">
      <label><%= check_box_tag 'email[send_email]', '1', current_user.email_on?(:send_email) %> Receive Emails</label>
    </div>
  </div>

  <div class="form-actions">
    <% form_name = "email_settings" %>
    <%= submit_tag "Save Settings", class: 'btn btn-primary' %>
  </div>
<% end %>
