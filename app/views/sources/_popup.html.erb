<div>
  <h3>Sources</h3>
</div>

<hr class="soften" style="margin-top:5px;margin-bottom:35px"/>

<div class="row">
  <div class="col-md-6">
    <%= form_tag sources_path(popup: true, search_id: @search.id), method: :get, remote: true, onsubmit: "showWaiting('#variable_folders', ' Loading Sources', true)", id: "sources_form" do %>
      <%= hidden_field_tag :order %>
      <%= text_field_tag 'sources_search', params[:sources_search], class: 'form-control', placeholder: 'Enter source name to filter list.' %>
    <% end %>
    <div id="sources" style="margin-top:10px">
      <%= render partial: 'sources/sources_popup' %>
    </div>
  </div>

  <div class="col-md-6">
    <div id="source_info">
      <div class="bs-callout bs-callout-info" style="margin-top:0px">
        Click on a source for a detailed description.
      </div>
    </div>
  </div>
</div>

<div style="height:30px; margin-top:35px;">
  <%= link_to 'Close', '#', class: 'btn btn-xs btn-default pull-right', data: { object: 'hide-contour-modal' } %>
</div>
