<% @title = 'Sources' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Source", new_source_path, class: 'btn btn-mini btn-primary' if current_user.system_admin? %>
  </h1>
</div>

<%= form_tag sources_path, method: :get, remote: true, id: "sources_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="sources"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#sources_search").attr("action"), $("#sources_search").serialize(), null, "script");
  });
<% end %>
