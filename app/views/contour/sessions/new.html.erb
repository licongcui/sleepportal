<% @title = 'Sign in' %>

<% if false %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>


      <% if devise_mapping.rememberable? -%>
        <div class="control-group">
          <div class="controls checkbox">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class="form-actions">
        <%= f.submit "Sign in", class: 'btn btn-primary' %>
        <%= render partial: 'contour/links' %>
      </div>

      <%= render partial: 'contour/authentications/login_table' %>
    <% end %>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <h2 class="form-signin-heading">Sign in</h2>
  <%= f.email_field :email, class: 'input-block-level', placeholder: 'Email' %>
  <%= f.password_field :password, class: 'input-block-level', placeholder: 'Password' %>

  <%= f.submit "Sign in", class: 'btn btn-success btn-block btn-large' %>
<% end %>

<div class="center">
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>

<% if PROVIDERS.size > 0 %>

<div class="form-signin">
  <h2 class="form-signin-heading">Sign in with</h2>
  <% PROVIDERS.each do |provider| %>
    <% provider_name = OmniAuth.config.camelizations[provider.to_s.downcase] || provider.to_s.titleize %>
    <% link = request.script_name + "/" + OmniAuth.config.path_prefix.split('/').last.to_s + "/" + provider.to_s.downcase %>
    <% image_name = provider.to_s.downcase %>
    <%#= link_to image_tag( "contour/#{image_name}_32.png", align: 'left', height: "28px" ) + provider_name, link, class: 'btn btn-block btn-large', style: 'text-align:left' %>

    <a href="<%= link %>" class="btn" style="white-space:nowrap">
      <%= image_tag "contour/#{image_name}_32.png", align: 'absmiddle', height: "28px" %>
    </a>
  <% end %>

</div>
<% end %>


<div class="center">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
  <% end -%>
</div>
