<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @source_join, html: { class: 'form-horizontal' } do |f| %>
  <% if @source_join.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@source_join.errors.count, "error") %> prohibited this source_join from being saved:</h2>

      <ul>
      <% @source_join.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :source_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :source_id, options_for_select([['---', nil]] + current_user.all_sources.collect{|s| [s.name, s.id]}, @source_join.source_id) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :from_table, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :from_table %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :from_column, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :from_column %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :source_to_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :source_to_id, options_for_select([['---', nil]] + current_user.all_sources.collect{|s| [s.name, s.id]}, @source_join.source_to_id) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :to_table, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :to_table %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :to_column, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :to_column %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
