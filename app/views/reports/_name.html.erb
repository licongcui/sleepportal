<%= link_to @report.name, edit_report_path(@report, query_id: @query.id), method: :get, remote: true, onclick: "$('#inlaid_report').html('<div class=\"frame\"><table width=\"100%\"><tr><td id=\"report_waiting_#{@report.id}\"></td></tr></table></div>');showWaiting('#report_waiting_#{@report.id}', ' Loading #{@report.is_dataset? ? 'Dataset' : 'Report'}', true);" %>

<span id="report_<%= @report.id %>_delete_link" style="display:none">
<%= link_to 'edit', edit_name_report_path(@report, query_id: @query.id), method: :post, remote: true, class: 'btn btn-mini' %>
<%= link_to 'remove', report_path(@report, query_id: @query.id), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete #{@report.name}?" }, class: 'btn btn-mini btn-danger' %>
</span>
