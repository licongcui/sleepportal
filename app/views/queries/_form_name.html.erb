<%= form_tag save_name_query_path(@query), method: :post, remote: true, class: 'form-inline', style: 'margin-bottom:0px' do %>
  <%= text_field :query, :name, style: 'width:300px', class: "input-small", placeholder: "Enter a Name for your Search" %>
  <%= submit_tag 'save', class: 'btn btn-mini btn-primary' %>
<% end %>
