<% @title = @dictionary.name %>
<div class="page-header">
  <h1>
    <%= link_to 'Dictionaries', dictionaries_path %> &middot; <%= @title %>
    <%= link_to 'Edit Dictionary', edit_dictionary_path(@dictionary), class: 'btn btn-xs' %>
    <%= link_to 'Delete Dictionary', @dictionary, data: { confirm: "Are you sure you want to delete Dictionary #{@dictionary.name}?" }, method: :delete, class: 'btn btn-xs btn-danger-inverse' %>
    <%= link_to 'Clean Dictionary', clean_dictionary_path(@dictionary), method: :post, data: { confirm: "Are you sure you want to DELETE all associated variables and domains for #{@dictionary.name} dictionary?" }, class: 'btn btn-xs btn-danger-inverse' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Description</dt>
  <dd><%= simple_format @dictionary.description %></dd>

  <dt>Creator</dt>
  <dd><%= link_to @dictionary.user.name, @dictionary.user if @dictionary.user %></dd>

  <dt>Visible</dt>
  <dd><%= simple_check @dictionary.visible %></dd>

  <dt><%= link_to 'Variables', dictionary_variables_path(@dictionary) %></dt>
  <dd>
    <%= @dictionary.variables.size %>
  </dd>

  <dt><%= link_to 'Domains', dictionary_domains_path(@dictionary) %></dt>
  <dd>
    <%= @dictionary.domains.size %>
  </dd>

</dl>
