<% @title = 'Dictionaries' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Dictionary", new_dictionary_path, class: 'btn btn-mini btn-primary' if current_user.system_admin? %>
  </h1>
</div>

<%= form_tag dictionaries_path, method: :get, remote: true, id: "dictionaries_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="dictionaries"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#dictionaries_search").attr("action"), $("#dictionaries_search").serialize(), null, "script");
  });
<% end %>
