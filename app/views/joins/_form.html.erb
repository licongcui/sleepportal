<div class="page-header">
  <h1><%= link_to @source.name, @source %> &middot; <%= link_to 'Joins', source_joins_path(@source) %> &middot; <%= @title %></h1>
</div>

<%= form_for [@join.source, @join], html: { class: 'form-horizontal' } do |f| %>
  <% if @join.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@join.errors.count, "error") %> prohibited this join from being saved:</h2>

      <ul>
      <% @join.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :from_table, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :from_table %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :from_column, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :from_column %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :to_table, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :to_table %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :to_column, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :to_column %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
