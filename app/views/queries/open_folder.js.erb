<% if params[:folder_id] == nil %>
  $("#variable_folders").html("<%= escape_javascript( render partial: 'variables/folders', locals: { folder: nil } ) %>");
<% else %>
  <% folder_display_name = params[:folder].split('/').last %>
  $("#<%= params[:folder_id] %>_link").html("<%= escape_javascript( render partial: 'variables/folder_link', locals: { folder_id: params[:folder_id], folder: folder_display_name } ) %>");
  $("#<%= params[:folder_id] %>_content").html("<%= escape_javascript( render partial: 'variables/folders', locals: { folder: params[:folder] } ) %>");
<% end %>
