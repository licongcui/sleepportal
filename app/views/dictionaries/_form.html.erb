<div class="page-header">
  <h1><%= link_to 'Dictionaries', dictionaries_path %> &middot; <%= @title %></h1>
</div>

<%= form_for @dictionary, html: { class: 'form-horizontal', enctype: "multipart/form-data" } do |f| %>
  <% if @dictionary.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@dictionary.errors.count, "error") %> prohibited this dictionary from being saved</h4>

      <ul>
      <% @dictionary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <div class="checkbox">
        <label><%= f.check_box :visible %> Visible</label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= label :variables_file, "Variables File", class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= file_field_tag :variables_file, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label :domains_file, "Domains File", class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= file_field_tag :domains_file, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>
  </div>
<% end %>
