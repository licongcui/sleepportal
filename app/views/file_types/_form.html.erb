<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @file_type, html: { class: 'form-horizontal' } do |f| %>
  <% if @file_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@file_type.errors.count, "error") %> prohibited this file_type from being saved:</h2>

      <ul>
      <% @file_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :extension, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :extension %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :visible, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :visible %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :dictionary_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :dictionary_id, [['---', nil]] + Dictionary.current.collect{|d| [d.name, d.id]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
