<div class="modal hide modal-large" id="concepts_popup">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Concepts</h3>
  </div>
  <div class="modal-body" id="concepts_content">

    <div class="row">
      <div class="span4">
        <div id="concept_folder_search"><%= render partial: 'concepts/folder_search' %></div>

        <div id="concept_folders"><%= render partial: 'concepts/folders' %></div>
      </div>

      <div class="span4">
        <div id="popup_content_right">
        </div>
        <div id="concept_info"></div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Close</a>
  </div>
</div>
