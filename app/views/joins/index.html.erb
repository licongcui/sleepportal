<% @title = 'Joins' %>
<div class="page-header">
  <h1>
    <%= link_to 'Sources', sources_path %> &middot; <%= link_to @source.name, @source %> &middot; <%= @title %>
    <%= link_to "Create Join", new_source_join_path(@source), class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag source_joins_path(@source), method: :get, remote: true, id: "joins_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="joins"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
