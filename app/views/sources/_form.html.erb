<div class="page-header">
  <h1><%= link_to 'Sources', sources_path %> &middot; <%= @title %></h1>
</div>

<%= form_for @source, html: { class: 'form-horizontal' } do |f| %>
  <% if @source.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved</h4>

      <ul>
      <% @source.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <div class="checkbox">
        <label><%= f.check_box :visible %> Visible</label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :wrapper, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.select :wrapper, Source::WRAPPER, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :host, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :host, placeholder: 'localhost', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :port, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.number_field :port, placeholder: '3306', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :database, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :database, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :username, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :password, class: 'form-control' %>
    </div>
  </div>



  <div class="form-group">
    <%= f.label :repository, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.select :repository, [['---', nil]] + Source::REPOSITORY, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file_server_host, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :file_server_host, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file_server_path, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :file_server_path, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file_server_login, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :file_server_login, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file_server_password, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :file_server_password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>
  </div>
<% end %>
