<% @title = "Concepts" %>
<div class="page-header">
  <h1>
    <% if @dictionary %>
      <%= link_to 'Dictionaries', dictionaries_path %> &middot; <%= link_to @dictionary.name, @dictionary %> &middot;
    <% end %>
    <%= @title %>
    <% if current_user.system_admin? and false %>
      <%= link_to "Create Concept", new_concept_path, class: 'btn btn-mini btn-primary' %>
    <% end %>
  </h1>
</div>

<%= form_tag concepts_path, method: :get, remote: true, id: "concepts_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :dictionary_id, params[:dictionary_id] %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="concepts"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
