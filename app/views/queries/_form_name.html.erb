<% form_name = 'query_name_form' %>
<%= form_tag save_name_query_path(@query), method: :post, remote: true, id: "#{form_name}", style: "display:inline" do %>
  <%= text_field :query, :name, style: 'width:300px' %>
  <%= link_to_function image_tag('gentleface/16/save.png', alt: '', style: 'vertical-align:text-bottom'), "$('##{form_name}').submit();" %>
<% end %>
