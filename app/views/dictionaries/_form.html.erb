<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @dictionary, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <% if @dictionary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dictionary.errors.count, "error") %> prohibited this dictionary from being saved:</h2>

      <ul>
      <% @dictionary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :visible, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :visible %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :status, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :status, Dictionary::STATUS %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :dictionary_file, 'CSV File', class: 'control-label' %>
    <div class="controls">
      <%= f.file_field :dictionary_file %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
