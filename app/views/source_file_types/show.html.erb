<% @title = "File Type: #{@source_file_type.name}" %>
<h1>
  <%= link_to @source_file_type.source.name, @source_file_type.source %> &raquo;<%= @title %>
</h1>
<% if @source.user_has_action?(current_user, "edit data source mappings") %>
  <%= link_to image_tag('gentleface/16/doc_edit.png', alt: '') + "Edit Source File Type", edit_source_file_type_path(@source_file_type), class: 'btn' %>
  <%= link_to image_tag('gentleface/16/doc_delete.png', alt: '') + "Delete Source File Type", source_file_type_path(@source_file_type, source_id: @source.id), confirm: "Are you sure you want to delete Source File Type #{@source_file_type.name}?", method: :delete, class: 'btn btn-danger' %>
<% end %>
<%= link_to "View All Source File Types", source_file_types_path(source_id: @source.id), class: 'btn' %>

<div style="clear:both"></div>
<fieldset>
  <br />
  <p>
    <b>File type:</b>
    <%= @source_file_type.file_type.name_and_extension if @source_file_type.file_type %>
  </p>
</fieldset>
