<% @title = 'Dictionaries' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Dictionary", new_dictionary_path, class: 'btn btn-xs btn-primary' if current_user.system_admin? %>
  </h1>
</div>

<%= form_tag dictionaries_path, method: :get, remote: true, id: "dictionaries_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="dictionaries"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
