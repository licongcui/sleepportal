<% @title = 'Sources' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Source", new_source_path, class: 'btn btn-xs btn-primary' if current_user.system_admin? %>
  </h1>
</div>

<%= form_tag sources_path, method: :get, remote: true, id: "sources_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="sources"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
