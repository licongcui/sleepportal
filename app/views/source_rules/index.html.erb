<% @title = "#{@source.name} Rules" %>
<div class="page-header">
  <h1>
    <%= link_to @source.name, @source %> &raquo;Rules
    <%= link_to "Create Source Rule", new_source_rule_path(source_id: @source.id), class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag source_rules_path(source_id: @source.id), method: :get, remote: true, id: "source_rules_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="source_rules"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#source_rules_search").attr("action"), $("#source_rules_search").serialize(), null, "script");
  });
<% end %>
