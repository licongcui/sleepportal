<% @reports.each do |report| %>
  <tr>
    <td><%= report.name %></td>
    <td><%= report.user_id %></td>
    <td><%= report.search_id %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, data: { confirm: 'Are you sure?' }, method: :delete %></td>
  </tr>
<% end %>
</table>

