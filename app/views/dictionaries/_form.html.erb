<div class="page-header">
  <h1><%= link_to 'Dictionaries', dictionaries_path %> &middot; <%= @title %></h1>
</div>

<%= form_for @dictionary, html: { class: 'form-horizontal', enctype: "multipart/form-data" } do |f| %>
  <% if @dictionary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dictionary.errors.count, "error") %> prohibited this dictionary from being saved:</h2>

      <ul>
      <% @dictionary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :visible, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.check_box :visible %>
    </div>
  </div>

  <div class="form-group">
    <%= label :variables_file, "Variables File", class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= file_field_tag :variables_file %>
    </div>
  </div>

  <div class="form-group">
    <%= label :domains_file, "Domains File", class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= file_field_tag :domains_file %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
